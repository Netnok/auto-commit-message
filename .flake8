[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.pyo,
    *.pyd,
    .Python,
    env,
    venv,
    .env,
    .venv,
    .tox,
    .coverage,
    htmlcov,
    .pytest_cache,
    .mypy_cache,
    .ruff_cache,
    .DS_Store,
    v/,
    ollama/ollama-was/,
    autocommit/lib/python3.13/site-packages/
ignore = E203,W503,F401,F403,F405,E501,F821,E999,E704,C901,W291,W292,W293,E128,E226,E302,E305,F811,F841,W504
per-file-ignores =
    __init__.py: F401 